<div class="sign-up">
  <h1>Sign Up!</h1>

  <form class="form" action="/register" method="POST">
    <div class="form-group">
      <input
        type="text"
        class="form-control"
        name="username"
        placeholder="username"
        required
      />
    </div>
    <div class="form-group">
      <input
        type="email"
        class="form-control"
        name="email"
        placeholder="email"
        required
      />
    </div>
    <div class="form-group">
      <input
        type="password"
        class="form-control"
        name="password"
        placeholder="password"
        pattern=".{5,10}"
        required
        title="Password must be minimum of 6 characters"
      />
    </div>
    <div class="form-group">
      <input class="btn" type="submit" value="Submit" />
    </div>
  </form>
</div>
